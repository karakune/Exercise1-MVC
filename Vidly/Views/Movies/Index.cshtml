
@model Vidly.Models.MovieIndexViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie list</h2>
<body>
	<table class="col-md-12 table table-striped table-bordered table-hover">
		<thead>
			<tr class="info">
				<th>Name</th>
				<th>Rating</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model.Movies)
			{
				<tr class="success">
				    <td><a href="Movies/Detail/show/@movie.Id">@movie.Name</a></td>
					<td>@movie.Rating</td>
				</tr>
			}
		</tbody>
	</table>
</body>

